<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
<head>
    <title>Reader - Article Page:</title>
</head>

 <%# STYLING %>
<style>
    body 
	{
		margin: 0px;
		height: 100%;
		background-color: #F5EDCE;
		font-family: "Space Grotesk", sans-serif;
		font-size: 11px; 
	}
	
	h1, h2
	{
		font-size: 13px; 
	}
		
	#samurai_image
	{
		border-radius: 50%;
	    float: left; 
	}
  </style>
  
<%# HTML BODY %>
<body>
	<center>
		<img id="samurai_image" src="/images/samurai.png" height="100px" width="100px" alt="Samurai">
		<% details.forEach(function(detail){ %>
			<p>
				<h1><%= detail.title %></h1>
			</p>
			<p>
				<h2><%= detail.subtitle %></h2>
			</p>
			<p>
				<h3><%= detail.author %></h3>
			</p>
		<% }) %>
	</center>
	<% articles.forEach(function(article){ %>
		<p>
			<h1><%= article.title %></h1>
		</p>
		<p>
			<h2><%= article.subtitle %></h2>
		</p>
		<p>
			<%= article.text %>
		</p>
		<p>
			Date published: <%= article.date_published %>
		</p>
		<p>
			Number of likes: <%= article.number_of_likes %>
		</p>
	<% }) %>
	<p>
		<form action="update-likes" method="post">
			<button type="submit"> Like â™¡ </button>
		</form>
	</p>
	<p>
	    <h3> Post a Comment </h3>
		<form action="post-comment", method="post">
			<p>
				<label for="lname">Name:</label><br>
			</p>
			<p>
				<input type="text" id="name" name="Name" value="A User">
			</p>
			<p>
				<label for="date">Date Published:</label><br>
			</p>
			<p>
				<input type="text" id="date" name="date" value="10/03/2030"> <br>
			</p>
			<p>
				<input type="text" id="comment-box" placeholder="Enter a comment">
			</p>
			<p>
				<button id="post">Post</button>
			</p>
		</form>
	</p>
	<p>
		<h3> Reader Comments </h3>
		<ul>
			<% comments.forEach(function(comment){ %>
			<p>
				<li"> <%= comment.author %>, <%= comment.date_published %>, <%= comment.text %></li>
			</p>
			<% }) %>
		</ul>
	</p>
	<p>
		<a href="/"><input type=button value="Return to the homepage"></a>
	</p>
</body>
</html>   