<!DOCTYPE html>
<html lang="en">

    <%# HTML HEAD %>
	<head>
		<link rel="stylesheet" href="/css/styles.css">
		<meta charset="UTF-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>Reader - Home Page</title>
	</head>
	
	<%# TOP NAV %>
	<div class="topnav">
		<a class="active" href="/author-homepage">Author's Homepage</a>
	</div>
	
	 <%# HTML HEADER %>
	<header>
		<div class="container">
			<img id="samurai_image" src="/images/samurai.png" alt="Samurai">
			<% details.forEach(function(detail){ %>
				<p>
				<h1><%= detail.title %></h1>
				</p>
				<p>
					<h2><%= detail.subtitle %></h2>
				</p>
				<p>
					<h3><%= detail.author %></h3>
				</p>
			<% }) %>
		</div>
	</header>

	<%# HTML BODY %>
	<body>
		<div class="container">
			<h1> List of Published Articles </h1>
				<p> Find a list of published articles here. </p>
				<ul>
					<% articles.forEach(function(article){ %>
						<li id="article_published"> 
							<a href="/read/<%= article.article_id %>"><%= article.title %>, <%= article.date_published %></a>
						</li>
					<% }) %>
				</ul>
			</div>
	</body>
	
	<%# FOOTER %>
	<footer>
		<div class="container">
			<p>&copy; 2023 Ghost and Snow 🐱</p>
		</div>
	</footer>
</html>   