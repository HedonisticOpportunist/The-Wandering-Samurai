<!DOCTYPE html>
<html lang="en">

<%# HTML HEADER %>
	<head>
		<meta charset="UTF-8">
		<link rel="stylesheet" href="/css/styles.css">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>Author - Settings Page:</title>
	</head>
	
	<%# HTML BODY %>
	<body id="settings">
		<center>
			<img id="samurai_image" src="/images/samurai.png" height="100px" width="100px" alt="Samurai">
			<h1>Settings Page </h1>
		</center>
		
		<%# SETTINGS FORM %>
		<% details.forEach(function(detail){ %>
			<form action="edit-settings" method="POST">
				<p>
					<input id="title" type="text" name="title" value=<%= detail.title %> />
				</p>
				<p>
					<input id="subtitle" type="text" name="subtitle" value=<%= detail.subtitle %> />
				</p>
				<p>
					<input id="author" type="text" name="author" value=<%= detail.author %> />
				</p>
				<p>
					<button id="submit">Edit the settings ðŸ‘»</button>
				</p>
			  </form>
			<% }) %>
			
			<%# RETURN TO AUTHOR'S HOMEPAGE %>
			<p>
				<a href="/author-homepage"><input type=button value="Return to the author's homepage"></a>
			</p>
		</body>
</html>   