<!DOCTYPE html>
<html lang="en">

<%# HTML HEADER %>
	<head>
		<meta charset="UTF-8">
		<link rel="stylesheet" href="/css/styles.css">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>Author - Settings Page:</title>
	</head>
	
	<%# SCRIPT %>
	<script src="/scripts/validation-script.js" type="text/javascript"></script> 
	
	 <%# HTML HEADER %>
	<header>
		<div class="container">
			<img id="samurai_image" src="/images/samurai.png" alt="Samurai">
			<% details.forEach(function(detail){ %>
				<p>
					<h1><%= detail.title %></h1>
				</p>
				<p>
					<h2><%= detail.subtitle %></h2>
				</p>
				<p>
					<h3><%= detail.author %></h3>
				</p>
			<% }) %>
		</div>
	</header>
	
	<%# HTML BODY %>
	<body id="settings">
		<div class="container">
			<%# CHANGE SETTINGS FORM %>
			<h1> Blog Settings </h1>
			<h3> Update Blog Settings </h3>
			<p> 
				Update the blog's settings here. 
			</p>
			<% details.forEach(function(detail){ %>
				<form name="settings" action="edit-settings" onsubmit="return validateSettingsForm()" method="post">
					<p>
						<label for="title">Blog Title:</label> 
					</p>
					<p>
						<input id="title" type="text" name="title" value=<%= detail.title %>>
					</p>
					<p>
						<label for="subtitle">Blog Subtitle:</label> 
					</p>
					<p>
						<input id="subtitle" type="text" name="subtitle" value=<%= detail.subtitle %>>
					</p>
					<p>
						<label for="author">Author:</label> 
					</p>
					<p>
						<input id="author" type="text" name="author" value=<%= detail.author %>>
					</p>
					<p>
						<button class="action-btn-grad" id="submit">Edit the settings üëª</button>
					</p>
				</form>
			<% }) %>
			
			<%# RETURN TO THE AUTHOR'S HOMEPAGE %>
			<p>
				<a href="/author-homepage"><input type=button class="navigation-btn-grad" value="Return to the author's homepage"></a>
			</p>
		</div>
	</body>
	
	<%# FOOTER %>
	<footer>
		<div class="container">
			<p>&copy; 2023 Ghost and Snow üê±</p>
		</div>
	</footer>
</html>   